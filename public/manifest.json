{
	"name": "LockedIn Site Blocker",
	"description": "Blocked distracting sites",
	"version": "1.0",
	"manifest_version": 3,
  	"options_page": "src/dashboard/dashboard.html",
	"action": {
		"default_popup": "src/popup/popup.html",
		"default_icon": "logo-transparent.png"
	},
	"icons": {
		"16": "logo-16.png",
		"32": "logo-32.png",
		"48": "logo-48.png",
		"128": "logo-128.png"
	},
	"content_scripts": [
	{
		"js": ["src/scripts/background.js"],
    	"matches": ["<all_urls>"]
	}
	],
	"background": {
		"service_worker": "src/scripts/background.js"
	},
	"permissions": [
		"tabs",
		"webRequest",
		"storage"
	]
}